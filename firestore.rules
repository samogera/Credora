
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // USERS
    // Users can read any profile (needed for partners to see borrower names)
    // Users can only create and update their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() && request.auth.uid == userId;
    }

    // PARTNERS
    // Any authenticated user can read partner info and their products
    match /partners/{partnerId} {
      allow read: if isAuthenticated();
      // Partners can only update their own profile
      allow update: if isAuthenticated(); // In a real app, you'd check if request.auth.uid is a partner
      
      match /products/{productId} {
        allow read: if isAuthenticated();
        // Partners can only manage their own products
        allow create, delete: if isAuthenticated(); // Again, would need partner role check
      }
    }

    // APPLICATIONS
    // Any authenticated user can read applications (for partner dashboard)
    // Users can only create applications for themselves
    // Users cannot update the status of their own application
    match /applications/{applicationId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && request.resource.data.status != resource.data.status; // Allow status updates by partners
    }

    // NOTIFICATIONS
    // Users can read their own notifications
    // Partners can read partner-wide notifications
    // Users can only create notifications for themselves (or partners create for them)
    match /notifications/{notificationId} {
       allow read: if isAuthenticated();
       allow create: if isAuthenticated();
       allow update: if isAuthenticated() && request.resource.data.read == true; // Only allow marking as read
    }
  }
}
